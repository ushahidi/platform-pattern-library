{{> ModeBar }}

<div class="mode-context">

    <header class="mode-context-header">
        <ol class="breadcrumbs">
            <li><a href="map.html">{{deployment.name}}</a></li>
            <li><a href="settings.html">Settings</a></li>
        </ol>

        <h1 class="mode-context-title">Labels</h1>
    </header>

    <span class="mode-context-trigger">
        <svg class="iconic">
            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
        </svg>
        <span class="label hidden">Show more/less</span>
    </span>

    <div class="mode-context-body">

    </div>
</div>

<main role="main">

    <div class="toolbar">
        <div class="fab">
            <button type="button" class="button-alpha button-fab">
                <svg class="iconic">
                  <use xlink:href="../../img/iconic-sprite.svg#plus"></use>
                </svg>
                <span class="hidden">Add</span>
            </button>
        </div>
    </div>

    <div class="full-col">

        <div class="listing card">
            <div class="listing-item">
                <div class="listing-item-select">
                    <input type="checkbox">
                </div>

                <div class="listing-item-secondary">
                    <button class="button-beta button-flat" data-modal="delete-post">
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#trash"></use>
                        </svg>
                        <span class="hidden">Delete</span>
                    </button>
                </div>

                <div class="listing-item-primary">
                    <h2 class="listing-item-title"><a href="settings-label-edit.html">Surface issues</a></h2>
                </div>
            </div>

            <div class="listing-item">
                <div class="listing-item-select">
                    <input type="checkbox">
                </div>

                <div class="listing-item-secondary">
                    <button class="button-beta button-flat" data-modal="delete-post">
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#trash"></use>
                        </svg>
                        <span class="hidden">Delete</span>
                    </button>
                </div>

                <div class="listing-item-primary">
                    <h2 class="listing-item-title"><a href="">Signage</a></h2>
                </div>
            </div>

            <div class="listing-item">
                <div class="listing-item-select">
                    <input type="checkbox" />
                </div>

                <div class="listing-item-secondary">
                    <button class="button-beta button-flat" data-modal="delete-post">
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#trash"></use>
                        </svg>
                        <span class="hidden">Delete</span>
                    </button>
                </div>

                <div class="listing-item-primary">
                    <h2 class="listing-item-title">
                        <a href="">Obstructions</a>
                        <span class="listing-item-image tooltip">
                            <svg class="iconic">
                                <use xlink:href="../../img/iconic-sprite.svg#lock-locked"></use>
                            </svg>
                            <span class="bug">Nobody can see this label when submitting a survey response</span>
                        </span>
                    </h2>
                </div>
            </div>

            <div class="listing-toolbar">
                <div class="listing-toolbar-summary">
                    <strong><span class="total"></span> selected</strong>
                    <button class="button-link">Deselect</button>
                    <button class="button-link">Select all</button>
                </div>

                <div class="listing-toolbar-actions">
                    <button type="button" class="button-destructive">
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#trash"></use>
                        </svg>
                        <span class="button-label hidden">Delete</span>
                    </button>
                </div>
           </div>
        </div>

    </div>

</main>

{{> Modals }}
