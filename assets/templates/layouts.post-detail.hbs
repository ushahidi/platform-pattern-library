{{> ModeBar }}

<div class="mode-context">

    <header class="mode-context-header {{#if deployment.logo}}has-logo{{/if}}">
        <h1 class="mode-context-title"><a href="">{{deployment.name}}</a></h1>

        {{#if deployment.logo}}
        <img src="{{deployment.logo}}" class="deployment-logo" />
        {{/if}}
    </header>

    <span class="mode-context-trigger">
        <svg class="iconic">
            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
        </svg>
        <span class="label hidden">Show more/less</span>
    </span>

    <div class="mode-context-body">
        {{{deployment.description}}}
    </div>

</div>

<main role="main">

    <!--// Uses numeric hash to determine which response to render by its index; falls back to index 0 //-->
    {{#postFromHash}}
    <div class="{{#if tasks}}main{{else}}{{#ifPostIsDataSource}}main{{else}}full{{/ifPostIsDataSource}}{{/if}}-col">

        <article class="postcard" role="article">
            {{postBand}}

            <div class="postcard-body">
                {{#postSurvey}}
                <h1 class="form-sheet-title survey-title">{{name}}</h1>
                <p>{{description}}</p>
                {{/postSurvey}}

                <div class="postcard-header">
                    <ul class="metadata">
                        <li>
                            {{#ifCond properties.status 'published'}}
                            <span class="status-indicator">
                                <svg class="iconic">
                                    <use xlink:href="../../img/iconic-sprite.svg#globe"></use>
                                </svg>
                                <span class="label">Published</span>
                            </span
                            {{/ifCond}}

                            {{#ifCond properties.status 'review'}}
                            <span class="status-indicator yellow">
                                <svg class="iconic">
                                    <use xlink:href="../../img/iconic-sprite.svg#lock-locked"></use>
                                </svg>
                                <span class="label">Under review</span>
                            </span>
                            {{/ifCond}}

                            {{#ifCond properties.status 'archived'}}
                            <span class="status-indicator dark">
                                <svg class="iconic">
                                    <use xlink:href="../../img/iconic-sprite.svg#box"></use>
                                </svg>
                                <span class="label">Archived</span>
                            </span>
                            {{/ifCond}}
                        </li>

                        {{#if properties.author.avatar}}
                        <li>
                            <img src="{{properties.author.avatar}}" class="avatar" />
                            <strong class="label">{{properties.author.name}}</strong>
                        </li>
                        {{else}}
                        <li><strong class="label">{{properties.author.name}}</strong></li>
                        {{/if}}
                        <li class="tooltip">
                            <span class="label">{{properties.date.post}}</span>
                            <span class="bug">2016-05-12 4:32pm</span>
                        </li>
                    </ul>

                    <div class="postcard-actions">
                        <a href="post-edit.html#{{indexFromHash}}" class="button button-gamma button-flat hide-until-small">
                            <svg class="iconic">
                                <use xlink:href="../../img/iconic-sprite.svg#pencil"></use>
                            </svg>
                            <span class="hidden">Edit</span>
                        </a>

                        <button class="button-gamma button-flat" data-toggle="dropdown-menu">
                            <svg class="iconic">
                                <use xlink:href="../../img/iconic-sprite.svg#ellipses"></use>
                            </svg>
                            <span class="hidden">More</span>
                        </button>

                        <div class="dropdown-menu">
                            <ul>
                                <li class="hide-when-small">
                                    <a href="post-edit.html#{{indexFromHash}}">
                                        <svg class="iconic">
                                            <use xlink:href="../../img/iconic-sprite.svg#pencil"></use>
                                        </svg>
                                        <span class="label">Edit</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="" data-modal="add-to-collection">
                                        <svg class="iconic">
                                            <use xlink:href="../../img/iconic-sprite.svg#grid-three-up"></use>
                                        </svg>
                                        <span class="label">Add to Collection</span>
                                    </a>
                                </li>
                                {{#ifCond properties.status 'published'}}
                                <li>
                                    <a href="" data-modal="share">
                                        <svg class="iconic">
                                            <use xlink:href="../../img/iconic-sprite.svg#share"></use>
                                        </svg>
                                        <span class="label">Share</span>
                                    </a>
                                </li>
                                {{/ifCond}}
                            </ul>
                            <div class="divider"></div>
                            <ul>
                                {{#ifCond properties.status 'published'}}
                                <li>
                                    <a href="">
                                        <svg class="iconic">
                                            <use xlink:href="../../img/iconic-sprite.svg#lock-locked"></use>
                                        </svg>
                                        <span class="label">Put under review</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="">
                                        <svg class="iconic">
                                            <use xlink:href="../../img/iconic-sprite.svg#box"></use>
                                        </svg>
                                        <span class="label">Archive</span>
                                    </a>
                                </li>
                                {{/ifCond}}
                                {{#ifCond properties.status 'review'}}
                                <li>
                                    <a href="">
                                        <svg class="iconic">
                                            <use xlink:href="../../img/iconic-sprite.svg#globe"></use>
                                        </svg>
                                        <span class="label">Publish</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="">
                                        <svg class="iconic">
                                            <use xlink:href="../../img/iconic-sprite.svg#box"></use>
                                        </svg>
                                        <span class="label">Archive</span>
                                    </a>
                                </li>
                                {{/ifCond}}
                                {{#ifCond properties.status 'archived'}}
                                <li>
                                    <a href="">
                                        <svg class="iconic">
                                            <use xlink:href="../../img/iconic-sprite.svg#globe"></use>
                                        </svg>
                                        <span class="label">Publish</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="">
                                        <svg class="iconic">
                                            <use xlink:href="../../img/iconic-sprite.svg#lock-locked"></use>
                                        </svg>
                                        <span class="label">Put under review</span>
                                    </a>
                                </li>
                                {{/ifCond}}
                                <li>
                                    <a href="" data-modal="delete-post">
                                        <svg class="iconic">
                                            <use xlink:href="../../img/iconic-sprite.svg#trash"></use>
                                        </svg>
                                        <span class="label">Delete</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                {{#each answers}}
                    {{postcardField ../properties.survey 0 @index false}}
                {{/each}}
            </div>

        </article>

        {{#if tasks}}
        <div class="toolbox">

            <div class="listing">

                <div class="listing-item active">
                    <!--div class="listing-item-secondary hide-when-small">
                        <button class="button-beta button-flat listing-item-toggle">
                            <svg class="iconic">
                                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                            </svg>
                            <span class="button-label">Configure</span>
                        </button>
                    </div-->

                    <div class="listing-item-primary">
                        <div class="listing-item-image">
                            <svg class="iconic">
                                <use xlink:href="../../img/iconic-sprite.svg#task"></use>
                            </svg>
                        </div>
                        <h2 class="listing-item-title">Tasks</h2>
                    </div>

                    <div class="listing-item-body">

                        <div class="tool">

                            {{#each tasks}}
                            <div class="task {{#if complete}}complete{{/if}} {{#if disabled}}disabled{{/if}}">
                                <h5 class="task-title">
                                    {{#unless disabled}}
                                    <a href="#task-{{@index}}" data-modal="task-{{@index}}">
                                        {{#unless complete}}
                                        <span class="status-indicator yellow"></span>
                                        {{/unless}}
                                    {{/unless}}

                                        {{taskInfo "name" 0 @index}}

                                    {{#unless disabled}}
                                    </a>
                                    {{/unless}}
                                </h5>
                                <div class="task-actions">

                                    {{#if assignee}}
                                    <span class="tooltip">
                                        <span class="bug">Assigned to {{assignee.name}}</span>
                                        <img src="{{assignee.avatar}}" class="avatar" />

                                        {{#if assignee.locked}}
                                        <span class="status-indicator">
                                            <svg class="iconic">
                                              <use xlink:href="../../img/iconic-sprite.svg#lock-locked"></use>
                                            </svg>
                                        </span>
                                        {{/if}}
                                    </span>
                                    {{/if}}

                                    <button class="button-beta button-flat" data-toggle="dropdown-menu">
                                        <svg class="iconic">
                                          <use xlink:href="../../img/iconic-sprite.svg#ellipses"></use>
                                        </svg>
                                        <span class="nodisplay">More</span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        {{#unless disabled}}
                                        <li>
                                            <a href="">Mark {{#if complete}}incomplete{{else}}complete{{/if}}</a>
                                        </li>
                                        <div class="divider"></div>
                                        {{/unless}}
                                        <li>
                                            <a href="" data-modal="task-assignment">
                                            <svg class="iconic">
                                                <use xlink:href="../../img/iconic-sprite.svg#person"></use>
                                            </svg>
                                            <span class="label">{{#if assignee}}Change{{else}}Add{{/if}} assignment</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="" data-modal="task-due">
                                            <svg class="iconic">
                                                <use xlink:href="../../img/iconic-sprite.svg#calendar"></use>
                                            </svg>
                                            <span class="label">{{#if due}}Change{{else}}Add{{/if}} due date</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="task-body">
                                    {{#if due}}
                                        <p><strong>Due</strong>: {{due}}</p>
                                    {{/if}}

                                    {{#if disabled}}
                                        <p><em>This task can't be completed until "Verify" is completed.</em></p>
                                    {{else}}
                                        {{taskInfo "description" 0 @index}}
                                    {{/if}}
                                </div>
                            </div>
                            {{/each}}

                        </div>

                    </div>
                </div>

            </div>

        </div>
        {{/if}}

        {{#ifPostIsDataSource}}
