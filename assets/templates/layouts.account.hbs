{{> ModeBar }}

<div class="mode-context">

    <header class="mode-context-header">
        <ol class="breadcrumbs">
            <li><a href="map.html">{{deployment.name}}</a></li>
        </ol>

        <img src="{{user.avatar}}" class="avatar" alt="User Avatar" />

        <h1 class="mode-context-title">{{user.name}}</h1>
    </header>

    <span class="mode-context-trigger">
        <svg class="iconic">
            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
        </svg>
        <span class="label hidden">Show more/less</span>
    </span>

    <div class="mode-context-body">
        <p>{{user.email}}, {{user.role}}</p>

        <button class="button-beta">Log out</button>
    </div>
</div>

<main role="main">

    <div class="toolbar">
        <nav class="tabs-menu" data-tabs="main-col">
            <ul>
                <li><a href="#user-posts">Posts</a></li>
                <li><a href="#user-tasks">Tasks</a></li>
            </ul>
        </nav>
    </div>

    <div id="user-posts" class="main-col">

        <div class="listing">

            {{#if user.logged_in}}
                {{#each deployment.posts}}
                    {{> Postcard}}
                {{/each}}
            {{else}}
                {{#each deployment.posts}}
                    {{#ifCond properties.status 'published'}}
                    {{> Postcard}}
                    {{/ifCond}}
                {{/each}}
            {{/if}}

            <div class="listing-item">
                <div class="listing-item-primary">
                    <button class="button-beta">Load more</button>
                </div>
            </div>

            <div class="listing-toolbar">
                <div class="listing-toolbar-summary">
                    <strong><span class="total"></span> selected</strong>
                    <button class="button-gamma">Deselect</button>
                </div>

                <div class="listing-toolbar-actions">

                    <button class="button-beta" data-toggle="toggle-content">
                        <span class="button-label">Mark as</span>
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                        </svg>
                    </button>
                    <ul class="dropdown-menu toggle-content">
                        <li>
                            <a href="">
                                <svg class="iconic">
                                    <use xlink:href="../../img/iconic-sprite.svg#globe"></use>
                                </svg>
                                <span class="label">Published</span>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <svg class="iconic">
                                    <use xlink:href="../../img/iconic-sprite.svg#lock-locked"></use>
                                </svg>
                                <span class="label">Under Review</span>
